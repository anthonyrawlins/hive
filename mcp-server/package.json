{
  "name": "hive-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Hive Distributed AI Orchestration Platform",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "watch": "tsc -w",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "typedoc && cd docs && python3 -m http.server 8080",
    "docs:clean": "rm -rf docs"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.1.3",
    "axios": "^1.6.0",
    "uuid": "^9.0.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "typedoc": "^0.28.7",
    "typedoc-plugin-markdown": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
